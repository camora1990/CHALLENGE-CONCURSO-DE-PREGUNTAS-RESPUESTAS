{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2016",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build"
  },

  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
